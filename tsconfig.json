{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "esnext", "es2016"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": true,
    "removeComments": false,
    "strict": true,
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "newLine": "lf",
  "include": ["src/**/*"]
}
